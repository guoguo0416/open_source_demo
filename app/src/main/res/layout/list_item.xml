<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/demo_list_item_padding">

  <ImageView
    android:id="@+id/iv_app_icon"
    android:layout_width="@dimen/demo_list_item_icon_width"
    android:layout_height="@dimen/demo_list_item_icon_height"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:contentDescription="list item image"
    android:scaleType="center" />

  <TextView
    android:id="@+id/tv_app_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_toRightOf="@+id/iv_app_icon"
    android:layout_toLeftOf="@+id/btn_download"
    android:text="app name"
    android:textColor="@android:color/black"
    android:textSize="16sp" />

  <TextView
    android:id="@+id/tv_download_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_app_name"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_toRightOf="@+id/iv_app_icon"
    android:text="IDLE"
    android:textColor="@android:color/black"
    android:textSize="16sp" />

  <Button
    android:id="@+id/btn_download"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:background="@drawable/btn_round_shape"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:text="@string/demo_list_item_download_btn"
    android:textColor="@android:color/black"
    android:textSize="@dimen/demo_list_item_btn_size" />

</RelativeLayout>